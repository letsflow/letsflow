{
  "$schema": "https://schemas.letsflow.io/v1.0.0/scenario",
  "title": "Quote",
  "description": "Provide a quote to a client",
  "actors": {
    "company": {
      "role": "support-team",
      "title": "company",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      }
    },
    "client": {
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      },
      "title": "client",
      "type": "object"
    }
  },
  "actions": {
    "new_lead": {
      "actor": [
        "company"
      ],
      "response": {
        "<ref>": "scenario.actors.client"
      },
      "update": [
        {
          "set": "actors.client",
          "data": {
            "<ref>": "current.response"
          },
          "mode": "replace",
          "if": true
        }
      ],
      "$schema": "https://schemas.letsflow.io/v1.0.0/action",
      "title": "new lead",
      "description": "",
      "if": true
    },
    "request_quote": {
      "$schema": "https://schemas.letsflow.io/v1.0.0/actions/form",
      "actor": [
        "client"
      ],
      "response": {
        "<ref>": "scenario.vars.quote_request"
      },
      "form": {
        "type": "VerticalLayout",
        "elements": [
          {
            "type": "Control",
            "scope": "#/properties/description",
            "options": {
              "multi": true
            }
          },
          {
            "type": "Control",
            "scope": "#/properties/budget"
          }
        ]
      },
      "update": [
        {
          "set": "vars.quote_request",
          "data": {
            "<ref>": "current.response"
          },
          "mode": "replace",
          "if": true
        }
      ],
      "title": "request quote",
      "description": "",
      "if": true
    },
    "create_quote": {
      "actor": [
        "company"
      ],
      "client": {
        "<ref>": "actors.client"
      },
      "request": {
        "<ref>": "vars.quote_request.description"
      },
      "budget": {
        "<ref>": "vars.quote_request.budget"
      },
      "response": {
        "properties": {
          "document": {
            "type": "string"
          }
        }
      },
      "update": [
        {
          "set": "vars.document",
          "data": {
            "<ref>": "current.response"
          },
          "mode": "replace",
          "if": true
        }
      ],
      "$schema": "https://schemas.letsflow.io/v1.0.0/action",
      "title": "create quote",
      "description": "",
      "if": true
    },
    "change_client_info": {
      "actor": [
        "company"
      ],
      "response": {
        "<ref>": "scenario.actors.client"
      },
      "data": {
        "<ref>": "actors.client"
      },
      "update": [
        {
          "set": "actors.client",
          "data": {
            "<ref>": "current.response"
          },
          "mode": "replace",
          "if": true
        }
      ],
      "ui": {
        "button": {
          "placement": "top",
          "title": "Change Client Info"
        }
      },
      "$schema": "https://schemas.letsflow.io/v1.0.0/action",
      "title": "change client_info",
      "description": "",
      "if": true
    },
    "accept": {
      "actor": [
        "client"
      ],
      "$schema": "https://schemas.letsflow.io/v1.0.0/action",
      "title": "accept",
      "description": "",
      "if": true,
      "response": {},
      "update": []
    },
    "reject": {
      "actor": [
        "client"
      ],
      "$schema": "https://schemas.letsflow.io/v1.0.0/action",
      "title": "reject",
      "description": "",
      "if": true,
      "response": {},
      "update": []
    },
    "cancel": {
      "actor": [
        "company"
      ],
      "ui": {
        "button": {
          "placement": "top",
          "title": "Cancel process"
        }
      },
      "$schema": "https://schemas.letsflow.io/v1.0.0/action",
      "title": "cancel",
      "description": "",
      "if": true,
      "response": {},
      "update": []
    }
  },
  "states": {
    "initial": {
      "title": "initial",
      "description": "",
      "instructions": {},
      "notify": [],
      "transitions": [
        {
          "on": "new_lead",
          "by": [
            "*"
          ],
          "if": true,
          "goto": "wait_on_client"
        },
        {
          "on": "cancel",
          "goto": "(canceled)",
          "by": [
            "*"
          ],
          "if": true
        },
        {
          "on": "change_client_info",
          "goto": null,
          "by": [
            "*"
          ],
          "if": true
        }
      ]
    },
    "wait_on_client": {
      "notify": [
        {
          "service": "sms",
          "after": 0,
          "if": true
        },
        {
          "service": "email",
          "after": 0,
          "if": true,
          "message": {
            "recipient": {
              "<ref>": "actors.client"
            },
            "template": {
              "<ref>": "scenario.emails.introduction"
            }
          }
        },
        {
          "service": "email",
          "after": 432000,
          "if": true,
          "message": {
            "recipient": {
              "<ref>": "actors.client"
            },
            "template": {
              "<ref>": "scenario.emails.reminder"
            }
          }
        }
      ],
      "transitions": [
        {
          "on": "request_quote",
          "goto": "wait_for_quote",
          "by": [
            "*"
          ],
          "if": true
        },
        {
          "after": 864000,
          "goto": "(failed)",
          "if": true
        },
        {
          "on": "cancel",
          "goto": "(canceled)",
          "by": [
            "*"
          ],
          "if": true
        },
        {
          "on": "change_client_info",
          "goto": null,
          "by": [
            "*"
          ],
          "if": true
        }
      ],
      "title": "wait on_client",
      "description": "",
      "instructions": {}
    },
    "wait_for_quote": {
      "instructions": {
        "company": {
          "<tpl>": "{{ actors.client.name }}\n{{ vars.quote_request.description }}\n"
        }
      },
      "title": "wait for_quote",
      "description": "",
      "notify": [],
      "transitions": [
        {
          "on": "create_quote",
          "by": [
            "*"
          ],
          "if": true,
          "goto": "review_quote"
        },
        {
          "on": "cancel",
          "goto": "(canceled)",
          "by": [
            "*"
          ],
          "if": true
        },
        {
          "on": "change_client_info",
          "goto": null,
          "by": [
            "*"
          ],
          "if": true
        }
      ]
    },
    "review_quote": {
      "instructions": {
        "company": {
          "<tpl>": "{{ actors.client.name }}\n{{ vars.quote_request.description }}\n"
        }
      },
      "transitions": [
        {
          "on": "accept",
          "goto": "(success)",
          "by": [
            "*"
          ],
          "if": true
        },
        {
          "on": "reject",
          "goto": "(failed)",
          "by": [
            "*"
          ],
          "if": true
        },
        {
          "on": "cancel",
          "goto": "(canceled)",
          "by": [
            "*"
          ],
          "if": true
        },
        {
          "on": "change_client_info",
          "goto": null,
          "by": [
            "*"
          ],
          "if": true
        }
      ],
      "title": "review quote",
      "description": "",
      "notify": []
    },
    "(canceled)": {
      "title": "canceled",
      "description": "",
      "instructions": {},
      "notify": []
    },
    "(failed)": {
      "title": "failed",
      "description": "",
      "instructions": {},
      "notify": []
    },
    "(success)": {
      "title": "success",
      "description": "",
      "instructions": {},
      "notify": []
    }
  },
  "vars": {
    "quote_request": {
      "properties": {
        "description": {
          "type": "string"
        },
        "budget": {
          "type": "number"
        }
      },
      "type": "object",
      "required": [],
      "additionalProperties": false,
      "title": "quote request"
    },
    "document": {
      "title": "document",
      "type": "string"
    }
  },
  "result": {
    "type": "string"
  },
  "emails": {
    "introduction": {
      "subject": "Introduction",
      "text": {
        "<tpl>": "Hi {{ recipient.name }},\nWe are excited to work with you.\n"
      }
    },
    "reminder": {
      "subject": "Reminder",
      "text": {
        "<tpl>": "Hi {{ recipient.name }},\nJust a friendly reminder.\n"
      }
    }
  },
  "ui": {
    "downloads": [
      {
        "name": "Quote",
        "link": {
          "<ref>": "vars.document"
        }
      }
    ]
  },
  "tags": []
}