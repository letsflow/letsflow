      "types": "./lib/scenario/index.d.ts",
      "default": "./lib/scenario/index.js"
    },
    "./process": {
      "types": "./lib/process/index.d.ts",
      "default": "./lib/process/index.js"
    },
    "./schemas/v1.0": {
      "types": "./lib/schemas/v1.0/index.d.ts",
      "default": "./lib/schemas/v1.0/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "@letsflow/jmespath": "^1.1.5-jasny.1",
    "@noble/hashes": "^1.8.0",
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "better-ajv-errors": "^2.0.2",
    "fast-json-stable-stringify": "^2.1.0",
    "get-value": "^4.0.1",
    "mustache": "^4.2.0",
    "set-value": "^4.1.0",
    "uuid": "^11.1.0",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.1",
    "@types/get-value": "^3.0.5",
    "@types/mocha": "^10.0.10",
    "@types/mustache": "^4.2.5",
    "@types/node": "^24.0.7",
    "@types/set-value": "^4.0.3",
    "@types/sinon": "^17.0.4",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.35.0",
    "chai": "^5.2.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "mocha": "^11.2.2",
    "prettier": "^3.6.2",
    "sinon": "^20.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "clean": "rm -rf ./lib ./dist",
    "build": "tsc --project tsconfig.build.json",
    "test": "mocha --require ts-node/register 'test/**/*.spec.ts'",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix"
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
