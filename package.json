{
  "name": "@letsflow/core",
  "version": "1.3.0",
  "description": "Shared library for LetsFlow",
  "author": "Arnold Daniels <arnold@jasny.net>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
